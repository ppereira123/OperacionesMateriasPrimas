<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.perfil.PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4"
                android:elevation="8dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Perfil de Usuario "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/purple_200"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_foto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:elevation="10dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txt_userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="ID" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="8dp"
                    android:src="@mipmap/usuarioo" />

                <TextView
                    android:id="@+id/txt_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:elevation="8dp"
                    android:src="@mipmap/email" />

                <TextView
                    android:id="@+id/txt_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="Correo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/grupo" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:hint="Operadores Seleccionados"
                    android:nextFocusLeft="@id/llReportes"
                    android:nextFocusRight="@id/llReportes"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tietOperadores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:editable="false"
                        android:focusable="auto"
                        android:gravity="center|left"
                        android:nextFocusLeft="@id/llReportes"
                        android:nextFocusRight="@id/llReportes"
                        android:selectAllOnFocus="false"
                        android:singleLine="false" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="205dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:elevation="15dp"
                android:gravity="center"
                android:text="Salir de cuenta"
                android:textColor="@color/black"
                app:backgroundTint="@color/ic_launcher_background"
                app:icon="@drawable/googleg_disabled_color_18"
                app:iconGravity="start"
                app:iconSize="50dp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="multiply" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>